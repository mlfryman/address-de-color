doctype html
html
  head
    meta(charset='utf-8')
    title Address Book de Colors
    link(rel='stylesheet', href='/css/style.css')
  body
    h1 Libreta de direcciones de Colores (Address Book of Colors)
    nav
      ul
        li: a(href='/') Home
        li: a(href='/about') About
        li: a(href='/faq') FAQ
        li: a(href='/contact') Contact
        li: a(href='/people') People
    h2 People Page!

    each person in people
      .person
        ul
          li= person.name
          li= person.email
          li= person.color
          li= person.website
          li= person.phone
